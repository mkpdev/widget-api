<div id="updateProfile" class="modal fade" role="dialog">
  <%=form_tag "/users/#{@user['id']}", method: :put, remote: :true, id: 'updateProfileForm' do %>
    <input type="hidden" name="user[id]" value="<%= user['id'] %>" id="user_id">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Update Profile</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="first_name">First Name</label>
            <input value="<%= user['first_name'] %>" name="user[first_name]" type="text" class="form-control" id="first_name">
          </div>
          <div class="form-group">
            <label for="last_name">Last Name</label>
            <input value="<%= user['last_name'] %>" name="user[last_name]" type="text" class="form-control" id="last_name">
          </div>
          <div class="form-group">
            <label for="date_of_birth">Date of Birth</label>
            <input value="<%= dob(user['date_of_birth']) %>" name="user[date_of_birth]" type="date" class="form-control" id="date_of_birth">
          </div>
          <div class="form-group">
            <label for="image_url">Image Url</label>
            <input value="<%= user['images']['original_url'] %>" name="user[image_url]" type="text" class="form-control" id="image_url">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
