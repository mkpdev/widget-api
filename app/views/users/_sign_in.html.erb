<div id="signIn" class="modal fade" role="dialog">
  <form id="logInForm" action="<%= login_users_path %>" method="post" data-remote="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Sign In</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="email">Email address:</label>
            <input name="user[username]" type="email" class="form-control" id="email">
          </div>
          <div class="form-group">
            <label for="pwd">Password:</label>
            <input name="user[password]" type="password" class="form-control" id="pwd">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success" id="signIn-submit">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>